<mujoco model="example_arm_fixed">
  <option timestep="0.002"/>

  <default>
    <joint type="hinge" damping="1" armature="0.01" limited="true"/>
    <geom type="capsule"
          condim="3"
          friction="0.8 0.1 0.1"
          solimp="0.9 0.99 0.003"
          solref="0.01 1"
          rgba=".8 .6 .4 1"/>
    <motor ctrlrange="-1 1" ctrllimited="true"/>
  </default>

  <worldbody>
    <light pos="0 1 1" dir="0 -1 -1" diffuse="1 1 1"/>

    <body name="upper_arm" pos="0 0 1">
      <joint name="shoulder_y" axis="0 1 0" range="-90 90"/>
      <joint name="shoulder_x" axis="1 0 0" range="-60 60"/>
      <geom name="upper_capsule" size="0.06" fromto="0 0 0  0 0 -0.4"/>

      <body name="lower_arm" pos="0 0 -0.4">
        <joint name="elbow1" axis="0 1 0" range="0 150"/>
        <geom name="lower_capsule" size="0.04" fromto="0 0 0  0.3 0 0"/>

        <!-- ✅ 第三段接在第二段末端：pos = (0.3,0,0) -->
        <body name="lower_lower_arm" pos="0.3 0 0">
          <joint name="elbow2" axis="0 1 0" range="0 150"/>
          <geom name="lower_lower_capsule" size="0.04" fromto="0 0 0  0.3 0 0"/>
            <body name="lower_lower_lower_arm" pos="0.3 0 0">
              <joint name="elbow3" axis = "0 1 0" range="0 150"/>
              <geom name="lower_lower_lower_capsule" size="0.04" fromto="0 0 0 0.3 0 0"/>
            </body>

        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="m_shoulder_y" joint="shoulder_y" gear="20"/>
    <motor name="m_shoulder_x" joint="shoulder_x" gear="20"/>
    <motor name="m_elbow1"     joint="elbow1"     gear="15"/>
    <motor name="m_elbow2"     joint="elbow2"     gear="15"/>
    <motor name ="m_elbow3"    joint="elbow3"     gear="15"/>
  </actuator>
</mujoco>
